<p id="notice"><%= notice %></p>

<h1>Transfers</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Concept</th>
      <th>Active</th>
      <th>Pasive</th>
      <th>Saldo</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= link_to transfers.account, transfers_path(:sort => true, :by => "account", :order => (params[:order] == "asc" ? "desc" : "asc")) %></td>
        <td><%= transfer.date %></td>
        <td><%= transfer.concept %></td>
        <td><%= transfer.active %></td>
        <td><%= transfer.pasive %></td>
        <td><%= transfer.saldo %></td>
        <td><%= transfer.account.name %></td>
        <td><%= link_to 'Show', transfer %></td>
        <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
        <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= paginate @transfers %>
  </tbody>
</table>
<br>

<%= link_to 'New Transfer', new_transfer_path %>
